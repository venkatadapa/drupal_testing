/**
 * @file
 * Navigation Styling
 */


/*
 * The active item in a Drupal menu
 */
li a.active {
  color: #000;
}

/*
 * Navigation bar
 */
#navigation {
}

.region-navigation {
}

/*
 * Primary and Secondary menu links
 */
#main-menu {
  background: transparent url(../images/menu-bg.png) top left no-repeat;
  color: #ffffff;
  height: 25px;
  margin-bottom: 3px;
  padding-top: 6px;
  padding-left: 5px;
}

#main-menu li {
  float: left;
  padding: 0;
}

#main-menu li a {
  color: #ffffff;
  padding: 6px 10px 8px 10px;
  text-decoration: none;
}

#main-menu li a:hover {
  background: transparent url(../images/menu-button-links-bg-hover.gif) top left repeat-x;
}

#main-menu li a.active {
  background: transparent url(../images/menu-button-links-bg-hover.gif) top left repeat-x;
}

#secondary-menu {
}

/*
 * Menu blocks
 */
.block-menu {
}

#block-menu-menu-services-submenu ul {
  padding-left: 0;
}
#block-menu-menu-services-submenu ul li a {
  background-color: #409b34;
  border-bottom: 1px solid #217216;
  border-top: 1px solid #60ce53;
  color: #ffffff;
  display: block;
  padding: 5px 5px 5px 15px;
  text-align: left;
  text-decoration: none;
  width: 150px;
}
#block-menu-menu-services-submenu ul li {
  list-style: none;
}
#block-menu-menu-services-submenu ul ul li a {
  background-color: #62ba56;
  display: block;
  padding: 5px 5px 5px 30px;
  text-align: left;
  width: 135px;
}
#block-menu-menu-services-submenu ul ul li a.active {
  background: #62ba56 url(/misc/menu-collapsed.png) 15px 50% no-repeat;
}
#block-menu-menu-services-submenu ul ul li {
  list-style: none;
}
#block-menu-menu-services-submenu ul ul li.last a {
  border-bottom: 1px solid #a0d69a;
}

/*
 * "Menu block" blocks. See http://drupal.org/project/menu_block
 */
.block-menu_block {
